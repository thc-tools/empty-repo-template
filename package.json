{
    "name": "@htc/empty-repo-template",
    "version": "1.0.0",
    "description": "Empty repo, for template",
    "main": "index.js",
    "scripts": {
        "pre-release": "standard-version",
        "pre-release-alpha": "standard-version --prerelease alpha",
        "pre-release-beta": "standard-version --prerelease beta",
        "release": "npm publish && conventional-github-releaser -p angular",
        "release-alpha": "npm publish --tag alpha && conventional-github-releaser -p angular && git push --follow-tags origin master",
        "release-beta": "npm publish --tag beta && conventional-github-releaser -p angular && git push --follow-tags origin master",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thc-tools/empty-repo-template.git"
    },
    "keywords": [
        "thc",
        "template"
    ],
    "author": "THC-Tools",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/thc-tools/empty-repo-template/issues"
    },
    "homepage": "https://github.com/thc-tools/empty-repo-template#readme",
    "devDependencies": {
        "conventional-github-releaser": "3.1.2",
        "standard-version": "4.4.0"
    }
}